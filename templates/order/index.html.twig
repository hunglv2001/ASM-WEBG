{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Discount</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <th scope="row">{{ order.id }}</th>
                    <td>{{ order.discount }}</td>
                    <td>
                        <a href="{{ path('order_details' , {'id' : order.id}) }}" class='btn btn-success'>View</a>
                        <a href="{{ path('order_edit' , {'id' : order.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('order_delete' , {'id' : order.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
    <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('order_create') }}" class="btn btn-primary" >Create</a></li>
        </ul>
    </div><!--/.nav-collapse -->
{% endblock %}
